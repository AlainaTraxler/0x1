<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Switch
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Routines"
            android:id="@+id/Source"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textAlignment="center" />
        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Search"
            android:layout_alignTop="@+id/Source"
            android:layout_toLeftOf="@+id/Done"
            android:layout_toRightOf="@+id/Source"
            android:imeOptions="flagNoExtractUi"
            android:layout_weight="1"
            android:layout_toEndOf="@+id/Source" />
        <EditText
            android:layout_width="0dp"
            android:imeOptions="flagNoExtractUi"
            android:layout_height="wrap_content"
            android:id="@+id/Name"
            android:hint="name"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/Done"
            android:layout_weight="2"
            android:background="#EF5350" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make"
            android:id="@+id/Save"
            android:layout_weight="2"
            android:background="#42A5F5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_below="@+id/Search"
        android:id="@+id/linearLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFrom"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vertical_separation_shadow_cropped"
            android:layout_weight=".10" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTo"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <requestFocus />
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
