<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Exercise Name"
        android:id="@+id/ExerciseName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Drag"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_swap_vert_black_24dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ExerciseName"
        android:id="@id/linearLayout"
        android:layout_alignRight="@id/ExerciseName"
        >

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi"
            android:ems="10"
            android:id="@+id/Sets"
            android:gravity="center"
            android:layout_alignTop="@+id/Reps"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:hint="sets"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="x"
            android:id="@+id/X"
            android:layout_alignTop="@+id/Pipe"
            android:layout_toLeftOf="@+id/Reps"
            android:layout_toStartOf="@+id/Reps" />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/Reps"
            android:layout_alignBottom="@+id/Weight"
            android:layout_toLeftOf="@+id/Pipe"
            android:gravity="center"
            android:hint="reps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\@"
            android:id="@+id/At"
            android:layout_alignTop="@+id/Weight"
            android:layout_toLeftOf="@+id/Weight"

            android:layout_toStartOf="@+id/Weight" />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Weight"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:layout_below="@id/ExerciseName"
            android:layout_alignParentRight="true"
            android:hint="lbs" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ExerciseName"
        android:layout_alignRight="@id/ExerciseName">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="75dp"
            android:imeOptions="flagNoExtractUi"
            android:gravity="center"
            android:inputType="time"
            android:id="@+id/Time"
            android:hint="0:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="x"
            android:id="@+id/Ex" />

        <EditText
            android:layout_width="75dp"
            android:imeOptions="flagNoExtractUi"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:id="@+id/Distance"
            android:hint="miles" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout"
        android:background="#42A5F5"/>

</RelativeLayout>